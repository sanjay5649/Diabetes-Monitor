<div>
  <div>
    <h1>
      Medication #<%= @the_medication.id %> details
    </h1>

    <div>
      <div>
        <a href="/medications">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_medication/<%= @the_medication.id %>">
          Delete medication
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_medication.user_id %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @the_medication.name %>
      </dd>

      <dt>
        Dosage
      </dt>
      <dd>
        <%= @the_medication.dosage %>
      </dd>

      <dt>
        Frequency
      </dt>
      <dd>
        <%= @the_medication.frequency %>
      </dd>

      <dt>
        Start date
      </dt>
      <dd>
        <%= @the_medication.start_date %>
      </dd>

      <dt>
        End date
      </dt>
      <dd>
        <%= @the_medication.end_date %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_medication.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_medication.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit medication
    </h2>

    <form action="/modify_medication/<%= @the_medication.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_medication.user_id %>">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_medication.name %>">
      </div>

      <div>
        <label for="dosage_box">
          Dosage
        </label>

        <input type="text" id="dosage_box" name="query_dosage" value="<%= @the_medication.dosage %>">
      </div>

      <div>
        <label for="frequency_box">
          Frequency
        </label>

        <input type="text" id="frequency_box" name="query_frequency" value="<%= @the_medication.frequency %>">
      </div>

      <div>
        <label for="start_date_box">
          Start date
        </label>

        <input type="date" id="start_date_box" name="query_start_date" value="<%= @the_medication.start_date %>">
      </div>

      <div>
        <label for="end_date_box">
          End date
        </label>

        <input type="date" id="end_date_box" name="query_end_date" value="<%= @the_medication.end_date %>">
      </div>

      <button>
        Update medication
      </button>
    </form>
  </div>
</div>

<hr>
